{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "America/Argentina/Cordoba",

  // i) SEMANAL: open pull requests (PRS) before 08:00 AR every Monday
  "schedule": ["before 8am on Monday"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 8am on Monday"]
  },

  "enabledManagers": ["npm", "github-actions"],

  "npm": {
    "ignorePaths": ["**/node_modules/**"]
  },

  // Commit style
  "semanticCommits": "enabled",

  "rangeStrategy": "bump",

  // Package-specific policies
  "packageRules": [
    {
      "description": "Automerge devDependencies (minor/patch)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Group React/Next and hold majors",
      "matchPackageNames": ["react", "react-dom", "next"],
      "separateMajorMinor": true,
      "matchUpdateTypes": ["major"],
      "enabled": false,
      "labels": ["major-hold"]
    },
    {
      "description": "Extra care for firebase-admin and express",
      "matchPackageNames": ["firebase-admin", "express"],
      "stabilityDays": 3,
      "labels": ["needs-manual-check"]
    }
  ],

  "labels": ["dependencies"],
  "reviewers": ["tu-usuario-github"]
}